/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.headline_text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
}

.headline {
  margin-top: 40rpx;
  height: auto;
  width: 100%;
  background: #d36ae6;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  /* padding: 0 0 0 40rpx; */
  box-sizing: border-box;
}

.pic {
  display: flex;
  flex-direction: column;
position:relative;
margin-right:9px;
margin-bottom:9px;
}
 
.delete-btn{
  position: absolute;
  top: 0;
  right: 0;
}
 
.weui-uploader{
  padding: 10rpx;
}
 
 
.lineHeight {
  width: 100%;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  font-size: 30rpx;
}

